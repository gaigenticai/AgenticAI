QDRANT_VECTOR_SIZE=768
QDRANT_DISTANCE_METRIC=cosine

# MinIO Configuration
MINIO_REGION=us-east-1
MINIO_BROWSER=off

# Data Lake Service Configuration
DATA_LAKE_PORT=8090
MINIO_ENDPOINT_BRONZE=http://minio_bronze:9000
MINIO_ENDPOINT_SILVER=http://minio_silver:9010
MINIO_ENDPOINT_GOLD=http://minio_gold:9020

# Message Queue Service Configuration
MESSAGE_QUEUE_PORT=8091

# Redis Caching Service Configuration
REDIS_CACHING_PORT=8092

# OAuth2/OIDC Service Configuration
OAUTH2_OIDC_PORT=8093
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
BASE_URL=http://localhost:8093

# Data Encryption Service Configuration
DATA_ENCRYPTION_PORT=8094

# Monitoring Service Configuration
MONITORING_PORT=8095
GRAFANA_API_KEY=admin:admin

# Audit Compliance Service Configuration
AUDIT_COMPLIANCE_PORT=8096

# Backup Orchestration Service Configuration
BACKUP_ORCHESTRATION_PORT=8097
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Port Manager Service Configuration
PORT_MANAGER_PORT=8098

# Jaeger Distributed Tracing Configuration
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=16688
JAEGER_AGENT_PORT=6831
JAEGER_ENDPOINT=http://jaeger:16686

# Distributed Tracing Service Configuration
TRACING_JAEGER_PORT=8099

# GraphQL API Service Configuration
GRAPHQL_API_PORT=8100

# === LOGGING & MONITORING ===
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_INTERVAL=15s
HEALTH_CHECK_INTERVAL=30s

# Alerting Thresholds
CPU_THRESHOLD=80
MEMORY_THRESHOLD=85
DISK_THRESHOLD=90
ERROR_RATE_THRESHOLD=5

# === BACKUP CONFIGURATION ===
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=gzip
BACKUP_ENCRYPTION=true

# === NETWORKING ===
DOCKER_NETWORK=agentic-network
NETWORK_SUBNET=172.20.0.0/16
NETWORK_GATEWAY=172.20.0.1

# === DEVELOPMENT SETTINGS ===
DEBUG_MODE=false
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# === TLS/SSL CONFIGURATION ===
SSL_CERT_PATH=/etc/ssl/certs/agentic.crt
SSL_KEY_PATH=/etc/ssl/private/agentic.key
SSL_CA_CERT_PATH=/etc/ssl/certs/ca.crt

# === RESOURCE LIMITS ===
# Memory limits (in MB)
INGESTION_COORDINATOR_MEMORY=512
OUTPUT_COORDINATOR_MEMORY=512
DATABASE_MEMORY=1024
CACHE_MEMORY=256
MESSAGE_QUEUE_MEMORY=512

# CPU limits
INGESTION_COORDINATOR_CPU=0.5
OUTPUT_COORDINATOR_CPU=0.5
DATABASE_CPU=1.0
CACHE_CPU=0.25
MESSAGE_QUEUE_CPU=0.5

# === AUTO-SCALING ===
ENABLE_AUTO_SCALING=false
MIN_REPLICAS=1
MAX_REPLICAS=5
CPU_SCALE_THRESHOLD=70
MEMORY_SCALE_THRESHOLD=75

# === DATA QUALITY & VALIDATION ===
ENABLE_DATA_VALIDATION=true
VALIDATION_STRICT_MODE=false
SCHEMA_DRIFT_DETECTION=true
DUPLICATE_DETECTION=true
DATA_PROFILING_ENABLED=true

# === PERFORMANCE TUNING ===
CONNECTION_POOL_SIZE=20
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=100
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# === FEATURE FLAGS ===
ENABLE_STREAMING_INGESTION=true
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_AI_INSIGHTS=false
ENABLE_CUSTOM_TRANSFORMATIONS=true

# === EXTERNAL INTEGRATIONS ===
ENABLE_SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# === COMPLIANCE & AUDIT ===
AUDIT_LOG_RETENTION=365
COMPLIANCE_MODE=standard
PII_DETECTION_ENABLED=true
DATA_CLASSIFICATION_ENABLED=true

# === DISASTER RECOVERY ===
DR_REPLICATION_ENABLED=false
DR_REPLICATION_REGION=
DR_BACKUP_SCHEDULE=0 3 * * *
DR_FAILOVER_TIMEOUT=300

# === COST OPTIMIZATION ===
ENABLE_COST_OPTIMIZATION=false
STORAGE_CLASS=standard
COMPUTE_OPTIMIZATION=balanced

# === ADVANCED CONFIGURATION ===
# Custom environment variables can be added below
# CUSTOM_VAR1=value1
# CUSTOM_VAR2=value2
