# Agentic Platform Environment Configuration
# Copy this file to .env and update values as needed

# === AUTHENTICATION & SECURITY ===
# REQUIRE_AUTH controls whether authentication is enabled (Rule 10)
REQUIRE_AUTH=false

# JWT Configuration (for REQUIRE_AUTH=true)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION_HOURS=24

# OAuth2/OIDC Configuration (for REQUIRE_AUTH=true)
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OIDC_ISSUER_URL=https://your-oidc-provider.com

# === DATABASE PASSWORDS ===
# Ingestion Layer Databases
POSTGRES_INGESTION_PASSWORD=agentic123
REDIS_INGESTION_PASSWORD=
MONGODB_INGESTION_PASSWORD=

# Output Layer Databases
